@model List<PaisModel>
@{
    Layout = "_LayoutVacio";
}
@section stiloAdminHome{
    <style>
        body {
            background-image: url("/Img/gatos.jpg");
        }
    </style>
}
<div class="card" style="padding-top: 10px;border-radius: 20px;box-shadow: 0px 0px 20px;margin: 10px;">
    <div class="card-body">
        <div class="text-center">
            <h1>Listado países&nbsp;</h1>
        </div>
        <div class="table-responsive" style="margin: 10px;border-radius: 20px;padding: 10px;border-style: solid;">
            <table class="table">
                <thead>
                    <tr>
                        <th class="table-active text-center">Identificador país&nbsp;</th>
                        <th class="table-active text-center">Nombre país</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pais in Model)
                    {
                        <tr>
                            <td class="text-center">@pais.PAIS_ID</td>
                            <td class="text-center">@pais.PAIS_Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="text-align: right;padding-right: 10px;border-radius: 20px;">
            <button id="botonAgregaPais" 
                    class="btn btn-primary"
                    type="button" style="text-align: center;background: var(--bs-indigo);border-radius: 20px;"
                    onClick="mostrarFormularioPais()">
                Agregar país
            </button>
        </div>
    </div>
</div>
<div class="card d-none" id="FormularioPais"
     style="margin-right: 200px;margin-bottom: 0px;margin-left: 300px;transform: translateY(-234px);box-shadow: 0px 0px 20px;border-radius: 20px;">
    <div class="card-body text-center">
        <h4 class="card-title text-center">Agregar país&nbsp;</h4>
        <div><input type="number" placeholder="Ingrese el id" style="margin-bottom: 10px;"></div>
        <div><input type="text" placeholder="Ingrese el nombre" style="margin-bottom: 10px;"></div>
        <div>
            <div class="table-responsive" style="border-style: solid;border-radius: 20px;margin-bottom: 10px;">
                <table class="table">
                    <thead>
                        <tr>
                            <th colspan="2">País</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           id="formCheck-1"><label class="form-check-label"
                                                                   for="formCheck-1">País&nbsp; &nbsp; 1</label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           id="formCheck-2"><label class="form-check-label"
                                                                   for="formCheck-2">País&nbsp; &nbsp; 2</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Cell 3</td>
                            <td>Cell 4</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div><button id="botonCancelarDepartamento" class="btn btn-danger" type="button"
                      style="border-radius: 20px;margin-right: 5px;"
                      onClick="ocultarFormularioDepartamento()">
            Cancelar
        </button><button class="btn btn-primary" type="button"
                         style="background: var(--bs-indigo);border-radius: 20px;">
            Aceptar
        </button>
    </div>
</div>
<script>
    document.getElementById("botonAgregaPais")
    function mostrarFormularioPais(){
        document.querySelector('#FormularioPais').classList.remove("d-none");
    }
</script>