@model List<PaisModel>
@{
    Layout = "_LayoutAdministracion";
}
@section stiloActualizarPais{
    <style>
        body {
            background-image: url("/Img/gatos.jpg");
        }
    </style>
}
<div class="card" style="padding-top: 10px;border-radius: 20px;box-shadow: 0px 0px 20px;margin: 10px;">
    <div class="card-body">
        <div class="text-center">
            <h1>Listado países&nbsp;</h1>
        </div>
        <div class="table-responsive" style="margin: 10px;border-radius: 20px;padding: 10px;border-style: solid;">
            <table class="table">
                <thead>
                    <tr>
                        <th class="table-active text-center">Identificador país&nbsp;</th>
                        <th class="table-active text-center">Nombre país</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pais in Model)
                    {
                        <tr>
                            <td class="text-center">@pais.PAIS_ID</td>
                            <td class="text-center">@pais.PAIS_Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="text-align: right;padding-right: 10px;border-radius: 20px;">
            <button id="botonActualizaPais" class="btn btn-primary"
                    type="button" style="text-align: center;background: var(--bs-indigo);border-radius: 20px;"
                    onClick=" mostrarFormularioPais()">
                Actualizar país
            </button>
        </div>
    </div>
</div>
<form asp-controller="Pais">
    <div class="card d-none" id="FormularioPais"
         style="margin-right: 200px;margin-bottom: 0px;margin-left: 300px;transform: translateY(-234px);box-shadow: 0px 0px 20px;border-radius: 20px;">
        <div class="card-body text-center">
            <h4 class="card-title text-center">Actualizar país&nbsp;</h4>
            <div><input name="idPais" type="number" placeholder="Ingrese el id" style="margin-bottom: 10px;"></div>
            <div><input name="nombrePais" type="text" placeholder="Ingrese el nombre" style="margin-bottom: 10px;"></div>
            <button id="botonCancelarPais" class="btn btn-danger" type="button"
                    style="border-radius: 20px;margin-right: 5px;"
                    onClick="ocultarFormularioPais()">
                Cancelar
            </button>
            <button class="btn btn-primary" type="submit"
                    style="background: var(--bs-indigo);border-radius: 20px;"
                    asp-action="ActualizarPais">
                Aceptar
            </button>
        </div>
    </div>
</form>
<script>
    document.getElementById("botonActualizaPais")
    function mostrarFormularioPais() {
        document.querySelector('#FormularioPais').classList.remove("d-none");
    }

    document.getElementById("botonCancelarPais")
    function ocultarFormularioPais() {
        document.querySelector('#FormularioPais').classList.add("d-none")
    }
</script>