@model PersonaModel
@{
    Layout = "_LayoutUsuario";
}
<section>
    <div class="container" style="margin-top: 15px;margin-left: 1px;">
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div>
                    <div class="card" style="border-radius: 20px;background: rgba(255,255,255,0.94);">
                        <div class="card-body">
                            <div class="text-center">
                                <img style="border-radius: 50%;border-style: solid;box-shadow: 0px 0px 20px;"
                                     src="assets/img/andrew.jpg">
                                <div><label class="form-label" style="margin-top: 10px;">@Model.PER_Usuario</label></div>
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col">
                                        <label class="col-form-label">Primer nombre: @Model.PER_NombreUno</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label class="col-form-label">Primer apellido: @Model.PER_ApellidoUno</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label class="col-form-label">
                                            Dirección: @Model.PER_DireccionVinda
                                        </label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label class="col-form-label">Correo: @Model.PER_Correo</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col"><label class="col-form-label">Publicaciones: @Model.CantidadPublicacion</label></div>
                                </div>
                                <div class="row">
                                    <div class="col"><label class="col-form-label">Mascotas: 0</label></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-9">
                <div class="card" style="border-radius: 25px;">
                    <div class="card-body">
                        <div>
                            <label class="form-label">Crear una publicación:&nbsp;</label><a class="btn btn-primary" role="button" style="border-radius: 20px;"
                                                                                             href="CrearPublicaciones.html">Crear</a>
                        </div>
                        <div style="border-style: solid;margin-top: 10px;padding: 10px;border-radius: 20px;">
                            <div class="text-center">
                                <img style="border-style: solid;border-radius: 50%;width: 200px;height: 200px;"
                                     src="assets/img/Login.jpg">
                            </div>
                            <div>
                                <div class="text-center">
                                    <label class="form-label" style="font-weight: bold;">
                                        Doy en
                                        adopción hermosos cachorros
                                    </label>
                                </div><label class="form-label">Descripción: XYZ</label>
                                <div class="text-end">
                                    <a class="btn btn-primary" role="button"
                                       style="border-radius: 20px;" href="Formulario-1.html">Adoptar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
   var modelo = @Html.Raw(Json.Serialize(Model));
</script>