<script>
    function habilitarCampos(campoId) {
        var campos = ["pais", "departamento", "municipio", "barrio"];
        var indice = campos.indexOf(campoId);

        for (var i = 0; i <= indice; i++) {
            var campo = document.getElementById(campos[i]);
            campo.disabled = false;
            campo.nextElementSibling.disabled = false;
        }

        document.getElementById("botonActualizar").disabled = false;
        document.getElementById("botonActualizar").classList.remove("disabled");
    }
</script>

